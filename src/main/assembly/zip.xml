<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bin</id>
    <baseDirectory>/</baseDirectory>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}/idm-staging/openidm/ui/sqlfiddle/public</directory>
            <outputDirectory>/sqlfiddle/ui/sqlfiddle/public</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/resources/${environment}</directory>
            <outputDirectory>/sqlfiddle/</outputDirectory>
            <filtered>true</filtered>
            <fileMode>0640</fileMode>
            <includes>
                <include>**/*.json</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/resources/${environment}</directory>
            <outputDirectory>/sqlfiddle/</outputDirectory>
            <fileMode>0640</fileMode>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/resources/custom</directory>
            <outputDirectory>/sqlfiddle/</outputDirectory>
            <filtered>true</filtered>
            <fileMode>0640</fileMode>
            <includes>
                <include>**/*.json</include>
            </includes>
            <excludes>
                <exclude>dev/**</exclude>
            </excludes>
        </fileSet>
       <fileSet>
            <directory>${basedir}/src/main/resources/custom</directory>
            <outputDirectory>/sqlfiddle/</outputDirectory>
            <filtered>true</filtered>
            <fileMode>750</fileMode>
            <includes>
                <include>setup.sh</include>
                <include>startup.sh</include>
                <include>bin/install-service.bat</include>
                <include>bin/launcher.bat</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/resources/custom/security</directory>
            <outputDirectory>/sqlfiddle/security</outputDirectory>
            <fileMode>0600</fileMode>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/resources/custom</directory>
            <outputDirectory>/sqlfiddle/</outputDirectory>
            <excludes>
                <exclude>*.sh</exclude>
                <exclude>README.txt</exclude>
                <exclude>ui/sqlfiddle/qunit/**</exclude>
                <exclude>dev/**</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/idm-staging/openidm</directory>
            <outputDirectory>/sqlfiddle</outputDirectory>
            <fileMode>750</fileMode>
            <includes>
                <include>startup.sh</include>
                <include>startup.bat</include>
                <include>shutdown.sh</include>
                <include>startup.sh</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/idm-staging/openidm/security</directory>
            <outputDirectory>/sqlfiddle/security</outputDirectory>
            <fileMode>0600</fileMode>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/idm-staging/openidm</directory>
            <outputDirectory>/sqlfiddle/</outputDirectory>
            <excludes>
                <exclude>**/conf/*.json</exclude>
                <exclude>**/bin/workflow/**</exclude>
                <exclude>**/connectors/**</exclude>
                <exclude>**/db/scripts/**</exclude>
                <exclude>**/samples/**</exclude>
                <exclude>**/ui/default/**</exclude>
                <exclude>**/ui/minified/**</exclude>
                <exclude>**/bin/*.txt</exclude>
                <exclude>**/*.sh</exclude>
                <exclude>**/*.bat</exclude>
            </excludes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>/sqlfiddle/bundle</outputDirectory>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <!--<useTransitiveFiltering>true</useTransitiveFiltering>-->
            <excludes>
                <exclude>org.forgerock.openidm:openidm-zip</exclude>
                <exclude>org.forgerock.openicf.connectors*</exclude>
            </excludes>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>/sqlfiddle/connectors</outputDirectory>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <!--<useTransitiveFiltering>true</useTransitiveFiltering>-->
            <includes>
                <include>org.forgerock.openicf.connectors*</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>
